<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonorListFragment"
    android:background="@android:color/white">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/Recieve_Message_DB"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        android:layout_marginTop="10dp"/>


    <Button
        android:background="@drawable/circle_btn"
        android:id="@+id/showAllDonorsbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show All Donors"
        android:textSize="16sp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:background="@drawable/circle_btn"
        android:id="@+id/showDonorsByBloodGroupbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Donors By Blood Group"
        android:textSize="16sp"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>


    <Button
        android:background="@drawable/circle_btn"
        android:id="@+id/showDonorsByCitybtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Donors By City"
        android:textSize="16sp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <ImageView

        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/blood1" />


</FrameLayout>