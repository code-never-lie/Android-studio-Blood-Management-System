<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonorDetailActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Donor Details"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donor Name :  "
            android:textSize="22sp"
            android:paddingLeft="15dp"/>

        <TextView
            android:id="@+id/donorGetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donor Email :  "
            android:textSize="22sp"
            android:paddingLeft="15dp"/>

        <TextView
            android:id="@+id/donorGetEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Email"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Group :  "
            android:textSize="22sp"
            android:paddingLeft="15dp"/>

        <TextView
            android:id="@+id/donorGetBloodGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Blood Group"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donor City :  "
            android:textSize="22sp"
            android:paddingLeft="15dp"/>

        <TextView
            android:id="@+id/donorGetCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="City"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donor No :  "
            android:textSize="22sp"
            android:paddingLeft="15dp"/>

        <TextView
            android:id="@+id/donorGetPhoneNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Phone No"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal">

        <TextView
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:text="Call"
            android:textSize="16sp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:text="SMS"
            android:textSize="16sp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:text="Video Call"
            android:textSize="16sp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:textSize="16sp"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/phoneCall"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_phone" />

        <ImageButton
            android:id="@+id/phoneSms"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_email"/>

        <ImageButton
            android:id="@+id/videoCall"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_phone"/>

        <ImageButton
            android:id="@+id/chatBox"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_contact" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">
    </LinearLayout>



</LinearLayout>