<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_DonorFragment">

    <TextView
        android:id="@+id/donorEmail"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/donorName"
        android:layout_alignLeft="@+id/donorName"
        android:layout_alignEnd="@id/donorName"
        android:layout_alignRight="@id/donorName"
        android:layout_marginTop="40dp"
        android:text="User Email"
        android:textSize="20sp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/donorName"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="110dp"
        android:layout_weight="2"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:hint="  Username"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/donorCity"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_below="@id/donorName"
        android:layout_alignStart="@+id/donorName"
        android:layout_alignLeft="@+id/donorName"
        android:layout_alignEnd="@id/donorName"
        android:layout_alignRight="@id/donorName"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_action_city"
        android:ems="10"
        android:hint="  City"
        android:inputType="textEmailAddress" />


    <EditText
        android:id="@+id/donorPhone"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_below="@id/donorCity"
        android:layout_alignStart="@+id/donorName"
        android:layout_alignLeft="@+id/donorName"
        android:layout_alignEnd="@id/donorName"
        android:layout_alignRight="@id/donorName"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_action_phone"
        android:ems="10"
        android:hint="  Phone Number"
        android:inputType="phone" />

    <LinearLayout
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/donorPhone"
        android:layout_alignStart="@+id/donorName"
        android:layout_alignLeft="@+id/donorName"
        android:layout_alignEnd="@id/donorName"
        android:layout_alignRight="@id/donorName"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Group :       "
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/bloodGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:background="@drawable/circle_btn"
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lv"
        android:layout_alignStart="@+id/donorName"
        android:layout_alignLeft="@+id/donorName"
        android:layout_alignEnd="@id/donorName"
        android:layout_alignRight="@id/donorName"
        android:layout_marginTop="30dp"
        android:text=" Save "
        android:textSize="15sp"
        android:textStyle="bold"/>



</RelativeLayout>